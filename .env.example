# Root Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration (for shared services)
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=consumer_rights

# Airflow Configuration (for data preparation pipeline)
AIRFLOW_DB_USER=airflow
AIRFLOW_DB_PASSWORD=your_secure_password
AIRFLOW_DB_NAME=airflow
AIRFLOW_SECRET_KEY=your_super_secret_key_change_it_to_random_string

# RabbitMQ Configuration (for live inference pipeline)
RABBITMQ_HOST=rabbitmq
RABBITMQ_QUEUE=CUD_queue

# Database Connection for Workers
DB_HOST=postgres
DB_USER=your_db_user
DB_PASSWORD=your_secure_password
DB_NAME=consumer_rights
